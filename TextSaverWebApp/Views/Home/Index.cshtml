@model IEnumerable<TextEntity>

@{
    ViewData["Title"] = "Home Page";
}

<div class="m-1 text-center">
    <div>
        <form asp-action="SaveText" method="post">
            <textarea class="form-control form-control-lg p-2 m-1" name="text" rows="10"></textarea>
            <button class="btn btn-primary btn-lg m-1">Save</button>
        </form>
    </div>
    <div>
        @if (Model.Any())
        {
            @foreach (var text in Model)
            {
                <br/>

                <div>
                    ***
                    @foreach (var p in text.GetParagraphs())
                    {
                        <p>@p</p>
                    }
                </div>
            }
        
        }
        else
        {
            <p>No saved text yet...</p>
        }
    </div>

</div>